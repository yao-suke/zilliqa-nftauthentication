const configureMinter = async (
    contract: any,
    zilPay: any,
) => {
    try {
        const callTransition = await contract.call(
            'configureMinter',
            [
                {
                    vname: 'name',
                    type: 'String',
                    value: name,
                }
            ]
        );
        transitionMessageAlert(zilPay, callTransition.ID, 'Creating user');
